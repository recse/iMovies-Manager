<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/altura_header_navegador"
    android:background="@drawable/fondo_nav_bar"
    android:backgroundTint="#70617C"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margen_horizontal_activity"
    android:paddingTop="@dimen/margen_vertical_activity"
    android:paddingRight="@dimen/margen_horizontal_activity"
    android:paddingBottom="@dimen/margen_vertical_activity"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/espacio_header_navegador"
        android:src="@drawable/icono_persona"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/usuario_barra_navegacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/espacio_header_navegador"
        android:text="Nombre de Usuario"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/contrasena_barra_navegacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email del usuario"
        tools:ignore="MissingConstraints" />
</LinearLayout>